# CyberShield AI - Environment Configuration Template
# Copy this file to .env and fill in your actual values

# ============================================
# DATABASE CONFIGURATION
# ============================================
# Using ports 5433 and 6380 to avoid conflicts with other projects
DATABASE_URL=postgresql://postgres:password@localhost:5433/cybersec_ai
REDIS_URL=redis://localhost:6380/0

# ============================================
# AZURE OPENAI CONFIGURATION (Required for AI Chat)
# ============================================
# Get these from: https://portal.azure.com → Azure OpenAI Service → Keys and Endpoint
AZURE_OPENAI_KEY=your_azure_openai_key_here
AZURE_OPENAI_ENDPOINT=https://your-resource-name.openai.azure.com/
AZURE_OPENAI_DEPLOYMENT=gpt-4
AZURE_OPENAI_API_VERSION=2024-02-15-preview

# ============================================
# API KEYS
# ============================================

# NVD API Key (Required for CVE Sync)
# Get from: https://nvd.nist.gov/developers/request-an-api-key
NVD_API_KEY=your_nvd_api_key_here

# Shodan API Key (Optional - for Shodan Intelligence feature)
# Get from: https://account.shodan.io/
SHODAN_API_KEY=your_shodan_api_key_here

# Stripe Secret Key (Optional - for billing feature)
# Get from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here

# ============================================
# SECURITY CONFIGURATION
# ============================================
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
JWT_SECRET_KEY=replace_this_with_random_32_char_hex_string
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ============================================
# APPLICATION CONFIGURATION
# ============================================
DEBUG=true
ENVIRONMENT=development
LOG_LEVEL=INFO

# ============================================
# AWS S3 (Optional - for report storage)
# ============================================
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_S3_BUCKET=cyberguard-reports
AWS_REGION=us-east-1

# ============================================
# CELERY CONFIGURATION
# ============================================
CELERY_BROKER_URL=redis://localhost:6380/0
CELERY_RESULT_BACKEND=redis://localhost:6380/0

# ============================================
# FEATURE FLAGS
# ============================================
ENABLE_AI_CHAT=true
ENABLE_CVE_SYNC=true
ENABLE_SHODAN=true
ENABLE_BILLING=false
